<!--index.wxml-->
<view class="container">
  <loading hidden="{{hiddenLoading}}">
        加载中...
    </loading>
<view class="item">
  <view class="text_card center">
    <view class="text_header center">
      - 一 言 -
    </view>
    <view class="text_con fz16">
     {{sentence.hitokoto}}
    </view>
    <view class="from right">
      <text wx:if="{{sentence.from_who}}">{{sentence.from_who}}</text>
      <text wx:else>from</text>
      <text>《{{sentence.from}}》</text>
    </view>
  </view>
</view>
<view class="item">
  <view class="text_card">
    <view class="center">
      <image src="{{dataList[0].src}}" bindtap='previewImage' class="img_top"></image>
    </view> 
    <view class="text_con" style="padding: 8px 24px 32px;">
      {{dataList[0].text}}
    </view>
  </view>
</view>
<view class="item" style="margin-bottom:0">
  <view class="text_art" bindtap="openArtical">
    <view class="text_header center">
      - 阅 读 -
    </view>
    <view class="text_read">
      <view class="text_title">
        {{artical.title}}
      </view>
      <view class="text_author">
        文 / {{artical.author}}
      </view>
      <view class="text_des">
        <text>{{artical.digest}}......</text>
        <text class="more">阅读全文</text>        
      </view>
    </view>
    <view class="img_con">
      <image src="https://api.xygeng.cn/Bing/" class="img"></image>
    </view> 
  </view>
</view>
</view>
