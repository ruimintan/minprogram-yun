/* 页面样式 */
.header-modular {
  height: 360px;
  background-color: #64C8FA;
  background: linear-gradient(to bottom, #56CCF2, #2F80ED);
  position: relative;
  padding: 20px;
}

.header-modular .bg-wave {
  width: 100vw;
  position: absolute;
  bottom: -2px;
  left: 0;
  right: 0;
  height: 70px;
  mix-blend-mode: screen;
}

.header-modular .location-wrap {
  color: #ffffff;
  font-size: 16px;
  padding: 8px;
}

.header-modular .location-wrap .icon {
  width: 16px;
  height: 16px;
  margin-right: 4px;
  position: relative;
  top: 2px;
}

.header-modular .tmp {
  font-size: 80px;
  color: #ffffff;
  margin-left: 100px;
}

.header-modular .icon-weather {
  width: 80px;
  height: 80px;
  position: relative;
  top: 16px;
}
.air{
  text-align: center;
}
.air .weathertext{
  font-size: 18px;
  color: #ffffff;
  margin-left: 24px;
}
.nowAir{
  color: #ffffff;
  font-size: 14px;
  display: inline-block;
  padding: 0 4px 0 3px;
  border-radius: 3px;
  margin-left: 8px;
}
.icon-kongqi{
  font-size: 14px;
}
.aqi{
  margin: 0 3px;
}
.jinrishici{
  position: absolute;
  width: 100%;
  left: 0;
  background: #00000030;
  text-align: center;
  color: #ffffff;
  font-size: 16px;
  opacity: 0.8;
  margin-top: 24px;
  height: 48px;
  line-height: 48px;
}
.header-modular .tips-wrap {
  text-align: center;
  margin: 8px 0;
}

.header-modular .tips {
  font-size: 14px;
  opacity: 0.8;
  color: #ffffff;
}

.header-modular .tips:nth-child(2) {
  margin: 0 10px;
}

.card-modular {
  padding:0 16px;
  margin-top: 24px;
}

.card-modular>.title {
  font-size: 20px;
  font-weight: bold;
  position: relative;
  margin-left: 8px;
  margin-bottom: 8px;
}

